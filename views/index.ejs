<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Person List</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Person List</h1>
        <a href="/person/new" class="btn btn-primary">Add New Person</a>
        
        <% if (people.length === 0) { %>
            <p class="no-data">No people found. Add a new person to get started.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Mobile Number</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% people.forEach(person => { %>
                        <tr>
                            <td><%= person.name %></td>
                            <td><%= person.age %></td>
                            <td><%= person.gender %></td>
                            <td><%= person.mobileNumber %></td>
                            <td class="actions">
                                <a href="/person/<%= person._id %>/edit" class="btn btn-edit">Edit</a>
                                <a href="/person/<%= person._id %>/delete" class="btn btn-delete">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>
